    print(f"Correct! my_bool is {my_bool}")
else:
    print(f"Wrong! my_bool is {my_bool}")
"""


# nested if statements
"""
if some_condition:
    if some_other_condition:
        ...
    else:
        ...
else:
    ...
"""



# conditionals

# equals to: ==
# not equals to: !=
# less than: <
# more than: >
# less than or equal to: <=
# more than or equal to: >=

# examples
"""
